<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBgColor"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_40dp"
        android:background="@color/redBgColor"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/header_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Thank You"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/thank_for_promo_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:layout_weight=".2"
            android:text="@string/thankyou_promo"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:background="@color/bgColor"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/thank_business_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:layout_marginRight="@dimen/dim_10dp"
                android:textSize="@dimen/dim_16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@color/bgColor"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:layout_marginRight="@dimen/dim_10dp"
                android:layout_weight=".5"
                android:text="Your order id is"
                android:textSize="@dimen/dim_16dp" />

            <TextView
                android:id="@+id/order_id_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:textColor="@color/redBgColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:id="@+id/lbl_camp_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:text="Campaign Details"
                android:textSize="@dimen/dim_18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_camp_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Name"
                    android:textSize="@dimen/dim_16dp" />

                <TextView
                    android:id="@+id/camp_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:gravity="right"
                    android:textColor="@color/redBgColor"
                    android:textSize="@dimen/dim_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_total_imp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Total Impressions"
                    android:textSize="@dimen/dim_16dp" />

                <TextView
                    android:id="@+id/total_imp_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:gravity="right"
                    android:textColor="@color/redBgColor"
                    android:textSize="@dimen/dim_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Start Date"
                    android:textSize="@dimen/dim_16dp" />

                <TextView
                    android:id="@+id/start_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:gravity="right"
                    android:textColor="@color/redBgColor"
                    android:textSize="@dimen/dim_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_amount_paid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Amount Paid"
                    android:textSize="@dimen/dim_16dp" />

                <TextView
                    android:id="@+id/amount_paid_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:gravity="right"
                    android:textColor="@color/redBgColor"
                    android:textSize="@dimen/dim_16dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_report_btn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/see_report_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            android:layout_marginLeft="@dimen/dim_20dp"
            android:layout_marginRight="@dimen/dim_20dp"
            android:background="@drawable/button_click"
            android:text="@string/see_report"
            android:textColor="@color/whiteBgColor"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>