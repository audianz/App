<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_40dp"
        android:background="@color/redBgColor" >

        <Button
            android:id="@+id/edit_cancel_btn"
            android:layout_width="@dimen/dim_80dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dim_10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/edit_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_busi_name_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Business Name"
            android:singleLine="true"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_name_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Your Name"
            android:singleLine="true"
            android:textColor="@color/txt_gray_color"
            android:inputType="textPersonName"
             android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_address_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Bussiness Address"
            android:singleLine="true"
            android:textColor="@color/txt_gray_color"
             android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_city_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="City"
            android:singleLine="true"
            android:textColor="@color/txt_gray_color"
             android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".999"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_state_et"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_weight=".5"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="State"
                android:singleLine="true"
                android:nextFocusDown="@+id/edit_zip_et"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />

            <EditText
                android:id="@+id/edit_zip_et"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Zip Code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/edit_email_tv"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:gravity="center_vertical"
            android:hint="Your email address"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_password_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_web_url_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Your website's URL"
            android:text="http://"
            android:inputType="textUri"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".09"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_mobile_et"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_weight=".999"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Mobile"
            android:inputType="phone"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".001"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".19"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/edit_update_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:background="@drawable/button_click"
            android:text="Update"
            android:textColor="@color/whiteBgColor"
            android:textSize="@dimen/dim_18dp" />
    </LinearLayout>

</LinearLayout>