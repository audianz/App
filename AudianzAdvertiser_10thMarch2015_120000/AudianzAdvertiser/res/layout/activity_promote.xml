<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_gravity="right"
        android:background="@color/redBgColor" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dim_3dp"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_3dp"
            android:background="@color/redBgColor"
            android:gravity="left|center_vertical"
            android:text="Cancel"
            android:textColor="@color/whiteBgColor"
            android:textSize="@dimen/dim_16dp" />

        <TextView 
            android:id="@+id/header_promote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Promote"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/txt_white_color"
            />
        <Button
            android:id="@+id/help_btn"
            android:layout_width="@dimen/dim_80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="Help"
            android:textColor="@color/whiteBgColor"
            android:textSize="@dimen/dim_16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".77"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".09"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/how_many_consumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="@string/lbl_how_many_consumers"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".09"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_user" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/plan_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".06"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="Start Date"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/start_date_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calender_date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/start_date_ll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85"
                android:gravity="center" >

                <TextView
                    android:id="@+id/start_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray_color"
                    android:textSize="@dimen/dim_15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".06"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/start_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="Start Time"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/start_time_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calender_time" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/start_time_ll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85"
                android:gravity="center" >

                <TextView
                    android:id="@+id/start_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray_color"
                    android:textSize="@dimen/dim_15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".06"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/promote_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="Promote Message"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center_horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:background="@drawable/mail_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85"
                android:gravity="center_horizontal" >

                <EditText
                    android:id="@+id/promote_msg_etv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLength="140"
                    android:text=""
                    android:textColor="@color/txt_gray_color"
                    android:textSize="@dimen/dim_15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".06"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_action_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="What you want your ad-viewer to do?"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".09"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/user_action_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_web_fb_url"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight=".06"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/web_fb_url_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10dp"
                android:text="Your Website/Facebook page URL"
                android:textColor="@color/txt_gray_color"
                android:textSize="@dimen/dim_15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_web_fb_val"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight=".08"
            android:background="@color/whiteBgColor"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/partner_code_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/partner_code_img" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginRight="@dimen/dim_5dp"
                android:layout_weight=".85" >

                <EditText
                    android:id="@+id/web_fb_url_etv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:paddingTop="@dimen/dim_5dp"
                    android:singleLine="true"
                    android:text="http://"
                    android:textColor="@color/txt_gray_color"
                    android:textSize="@dimen/dim_15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/promote_desc_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingBottom="@dimen/dim_0dp"
            android:text="@string/lbl_confirm_msg"
            android:textColor="@color/txt_gray_color"
            android:textSize="@dimen/dim_16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dim_5dp"
            android:layout_marginLeft="@dimen/dim_20dp"
            android:layout_marginRight="@dimen/dim_20dp"
            android:background="@drawable/button_click"
            android:text="@string/Confirm"
            android:textColor="@color/whiteBgColor"
            android:textSize="@dimen/dim_18dp" />
    </LinearLayout>

</LinearLayout>